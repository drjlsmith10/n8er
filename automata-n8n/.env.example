# Project Automata Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# ============================================================================
# PATHS
# ============================================================================
KNOWLEDGE_BASE_DIR=./knowledge_base
WORKFLOWS_DIR=./workflows
LOGS_DIR=./logs

# ============================================================================
# API KEYS (Optional - for real web research)
# ============================================================================

# Reddit API (https://www.reddit.com/prefs/apps)
# REDDIT_CLIENT_ID=your_client_id_here
# REDDIT_CLIENT_SECRET=your_client_secret_here
# REDDIT_USER_AGENT=ProjectAutomata/2.0

# YouTube API (https://console.cloud.google.com/)
# YOUTUBE_API_KEY=your_youtube_api_key_here

# Twitter API (https://developer.twitter.com/)
# TWITTER_API_KEY=your_twitter_api_key_here
# TWITTER_API_SECRET=your_twitter_api_secret_here
# TWITTER_ACCESS_TOKEN=your_access_token_here
# TWITTER_ACCESS_SECRET=your_access_token_secret_here

# GitHub API (https://github.com/settings/tokens)
# GITHUB_TOKEN=your_github_token_here

# ============================================================================
# N8N INTEGRATION (Optional - for workflow testing)
# ============================================================================
# N8N_API_URL=http://localhost:5678/api/v1
# N8N_API_KEY=your_n8n_api_key_here

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_WEB_RESEARCH=false  # Enable real API calls (requires API keys)
ENABLE_CACHING=true
ENABLE_METRICS=false

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ============================================================================
# SECURITY (Production only)
# ============================================================================
# SECRET_KEY=your_secret_key_here_minimum_32_characters
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ORIGINS=http://localhost:3000

# ============================================================================
# DATABASE (Future use)
# ============================================================================
# DATABASE_URL=sqlite:///./automata.db
# DATABASE_POOL_SIZE=5

# ============================================================================
# MONITORING (Future use)
# ============================================================================
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090
